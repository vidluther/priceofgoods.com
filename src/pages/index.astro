---
import Layout from "../layouts/Layout.astro";
import CategorySection from '../components/react/CategorySection';
import { fetchGoodsConfig } from '../lib/fetchUtils';

const goodsConfig = await fetchGoodsConfig();
const title = "Price of Goods - Track Daily Essentials Prices in the USA";
const description = "Live tracking of essential goods prices in the United States. Monitor costs of everyday items with historical price trends.";
---

<Layout
  title={title}
  description={description}
  ogImage={{
    type: "home",
    slug: "index"
  }}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl">
        priceofgoods
      </h1>
      <p class="mt-3 text-xl text-gray-500 sm:mt-4">
        Current price of Goods in the USA ðŸ‡ºðŸ‡¸
      </p>
    </div>

    {Object.entries(goodsConfig.categories).map(([key, category]) => (
      <CategorySection
        category={category.name}
        items={category.items}
        client:load
      />
    ))}
  </div>
</Layout>
